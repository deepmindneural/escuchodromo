# Configuración de Producción - Escuchodromo
NODE_ENV=production

# Base de datos (PostgreSQL para producción)
# DATABASE_URL="postgresql://usuario:password@localhost:5432/escuchodromo"

# Seguridad (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET="tu-clave-secreta-segura-en-produccion"
