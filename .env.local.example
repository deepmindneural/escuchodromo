# ==========================================
# SUPABASE - CONFIGURACIÓN
# ==========================================
# Obtén estos valores en: https://app.supabase.com/project/_/settings/api

# URL del proyecto Supabase
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co

# Anon Key (pública - safe para el browser con RLS)
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key-aqui

# Service Role Key (secreta - NUNCA exponer en el cliente)
# ⚠️ SOLO usar en el servidor (API routes, Server Actions)
# ⚠️ Bypass de todas las políticas RLS
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-aqui

# Database URL (para conexiones directas si es necesario)
DATABASE_URL=postgresql://postgres:PASSWORD@db.tu-proyecto.supabase.co:5432/postgres

# ==========================================
# APIs EXTERNAS (Opcional - configurar después)
# ==========================================

# OpenAI para IA avanzada
OPENAI_API_KEY=

# Stripe para pagos
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# SendGrid para emails
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Twilio para SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Azure Speech (para voz)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# ==========================================
# IA - GOOGLE GEMINI
# ==========================================
# Obtén tu API key gratis en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# ==========================================
# CONFIGURACIÓN DE LA APP
# ==========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
